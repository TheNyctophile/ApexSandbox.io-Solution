public String aOrAn(String word) {
    String newString; //EMPTY STRING TO BE RETURNED

    //CHECK IF THE WORD STARTS WITH A VOWEL
    if(word.StartsWith('a')) {
        newString = 'an '+ word; //ADD A SUBSTRING 'an ' TO THE WORD
    }
    else if(word.StartsWith('e')) {
        newString = 'an '+ word;
    }
    else if(word.StartsWith('i')) {
        newString = 'an '+ word;
    }
    else if(word.StartsWith('o')) {
        newString = 'an '+ word;
    }
    else if(word.StartsWith('u')) {
        newString = 'an '+ word;
    }

    //IF THE WORD DOESN'T START WITH A VOWEL
    else newString = 'a '+ word; //ADD A SUBSTRING 'a ' TO THE WORD
    return newString;
}