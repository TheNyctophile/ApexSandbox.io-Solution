public Integer nextPrime(Integer num) {
    Integer primeNum, n;
    Boolean primecheck;

    for(n = num+1; n > num; n++) {
        primecheck = isPrime(n);
        if(n>0 && primecheck) {
            primeNum = n;
            break;
        }
    }

    return primeNum;
}

public Boolean isPrime(Integer num) {
    boolean result;
    integer count = 0;
    for(Integer n = 1; n <= num; n++) {
        if(math.mod(num, n) == 0) {
            count ++;
        }
    }
    result = (count > 2) ? false : true;
    return result;
}