public String nameFromEmail(String email) {
    String firstNameFromEmail, lastNameFromEmail, firstName, lastName, name;
    firstNameFromEmail = email.subStringBefore('.');
    firstName = firstNameFromEmail.toLowerCase();
    firstName = firstNameFromEmail.capitalize();

    lastNameFromEmail = email.subStringBetween('.', '@');
    lastName = lastNameFromEmail.toLowerCase();
    lastName = lastNameFromEmail.capitalize();
    name = firstName + ' ' + lastName;
    return name;
}